<script>
    function makeMove(move) {
        board.move(move.slice(0, 2) + '-' + move.slice(-2));
    }

    function timer() {
        var data = {
            guid: id
        }
        $.get('GetOutput', data, function (lineInfo) {
            $('#depth').first().text(lineInfo.Depth);
            $('#score').first().text(lineInfo.Score);
            $('#nodes').first().text(lineInfo.Nodes);
            $('#time').first().text(lineInfo.Time);

            
            var movesLink = '';
            for (var i = 0; i < lineInfo.Moves.split(' ').length; i++) {
                var move = lineInfo.Moves.split(' ')[i];
                movesLink += i + 1 + '. ' + '<a class="move" onClick="makeMove(\'' + move +  '\')" href="#">' + move + '</a> ';
            }

            $('#moves').first().empty();
            $('#moves').first().html(movesLink);
        });
    }
</script>

