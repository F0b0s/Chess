<script>
    var id = '';
    $(document).ready(function () {
        $('#analyze').first().click(function () {
            var fen = $('#fen').first();
            var depth = $('#depthSpinner').first();
            var data = {
                fen: fen.text(),
                depth: depth.spinner('value')
            }
            $.get('/Home/StartAnalyze', data, function(result) {
                id = result;
                setInterval(timer, 2000);
            });
        });
    });
</script>
